---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

interface Props extends CollectionEntry<'projects'>['data'] {}

const {
	title,
	description,
	role,
	techStack,
	startDate,
	endDate,
	liveUrl,
	repoUrl,
	heroImage,
} = Astro.props;

const hasLinks = Boolean(liveUrl || repoUrl);
---

<html lang="pt-BR">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1.5em;
				padding: 1em 0;
				text-align: center;
				line-height: 1.1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.meta {
				display: grid;
				gap: 0.5em;
				justify-items: center;
				margin-bottom: 1.25em;
				color: rgb(var(--gray));
			}
			.meta strong {
				color: rgb(var(--black));
			}
			.meta .stack {
				display: flex;
				flex-wrap: wrap;
				gap: 0.35em;
				justify-content: center;
			}
			.meta .stack span {
				padding: 0.25em 0.6em;
				border-radius: 999px;
				background: rgba(var(--accent), 8%);
				font-size: 0.85em;
			}
			.links {
				display: flex;
				gap: 0.75em;
				justify-content: center;
				flex-wrap: wrap;
			}
			.links a {
				display: inline-flex;
				align-items: center;
				gap: 0.35em;
				padding: 0.4em 0.9em;
				border-radius: 999px;
				border: 1px solid rgba(var(--accent), 40%);
				text-decoration: none;
				color: rgb(var(--black));
			}
			.links a:hover {
				border-color: rgb(var(--accent));
				color: rgb(var(--accent));
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="meta">
							<div>
								<FormattedDate date={startDate} />
								{endDate && (
									<span>
										 {' '}até <FormattedDate date={endDate} />
									</span>
								)}
							</div>
							<div>
								<strong>Papel:</strong> {role}
							</div>
							<div class="stack">
								{techStack.map((tech) => (
									<span>{tech}</span>
								))}
							</div>
							{hasLinks && (
								<div class="links">
									{liveUrl && (
										<a href={liveUrl} target="_blank" rel="noreferrer">Demo</a>
									)}
									{repoUrl && (
										<a href={repoUrl} target="_blank" rel="noreferrer">Repositório</a>
									)}
								</div>
							)}
						</div>
						<h1>{title}</h1>
						<p>{description}</p>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
